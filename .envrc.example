# OCI Configuration
export TF_VAR_tenancy_ocid="ocid1.tenancy.oc1..xxx"
export TF_VAR_compartment_id="ocid1.compartment.oc1..xxx"
export TF_VAR_region="us-phoenix-1"

# Cloudflare Configuration
export CLOUDFLARE_API_TOKEN="xxx"
export CLOUDFLARE_ACCOUNT_ID="xxx"
export TF_VAR_cloudflare_api_token="$CLOUDFLARE_API_TOKEN"
export TF_VAR_cloudflare_account_id="$CLOUDFLARE_ACCOUNT_ID"
export TF_VAR_cloudflare_domain="example.com"

# GitHub Configuration
export GITHUB_TOKEN="ghp_xxx"
export GITHUB_USER="username"
export GITHUB_REPO="k8s-oci-foundation"

# SOPS Configuration
export SOPS_AGE_KEY_FILE="$PWD/age.key"

# Kubeconfig
export KUBECONFIG="$PWD/kubeconfig"

# Optional: Vault (set after initialization)
# export VAULT_ADDR="http://127.0.0.1:8200"
# export VAULT_TOKEN="hvs.xxx"
